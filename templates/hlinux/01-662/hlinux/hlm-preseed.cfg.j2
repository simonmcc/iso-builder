####################################################################
# Post-processing before reboot.  Remember, no environment exists.
# 1) cleanup unused VG
# 2) configure network
# 3) more network config!
# early config to match an ether MAC to a known name (after first reboot)
# to force a certain MAC to a name, we need to update mtab in the initrd
# https://www.debian-administration.org/article/658/DebianInstaller_Remotely_with_Multiple_Network_Interfaces
#
# /etc/udev/rules.d/70-persistent-net.rules
# PCI device 0x8086:0x10fb (ixgbe)
# SUBSYSTEM=="net", ACTION=="add", DRIVERS=="?*", ATTR{address}=="5c:b9:01:89:b4:18", ATTR{dev_id}=="0x0", ATTR{type}=="1", KERNEL=="eth*", NAME="eth4"
# 4) add a vagrant user
d-i preseed/late_command string \
umount /target/unused; \
lvremove -f /dev/hlm-vg/unused;\
in-target sed -i "s,unused,,g" /etc/fstab;\
cp /sbin/configure_network.sh /target/tmp;\
cp /sbin/configure_network.sh /target/root;\
in-target bash /tmp/configure_network.sh ;\
in-target sed -i "s,sudo[\t]ALL=(ALL:ALL) ALL,sudo ALL = (ALL) NOPASSWD: ALL,g" /etc/sudoers ;\
# 3 - more network tweaking ;\
rm /target/etc/udev/rules.d/70-persistent-net.rules; \
echo SUBSYSTEM==\"net\", ACTION==\"add\", DRIVERS==\"?*\", ATTR{address}==\"{{ iso_choose_interface_mac }}\", ATTR{dev_id}==\"0x0\", ATTR{type}==\"1\", KERNEL==\"eth*\", NAME=\"{{iso_choose_interface}}\" \
> /target/etc/udev/rules.d/60-persistent-net.rules; \
# setup a vagrant user so that vagrant can connect ;\
in-target useradd vagrant;\
in-target mkdir -p /home/vagrant/.ssh;\
in-target chown vagrant:vagrant /home/vagrant/.ssh;\
in-target chmod 700 /home/vagrant/.ssh;\
echo "ssh-rsa  vagrant insecure public key" > /target/home/vagrant/.ssh/authorized_keys;\
in-target chown vagrant:vagrant /home/vagrant/.ssh/authorized_keys


