#  hLinux blaster preseed
####################################################################
# Installation Sources
d-i cdrom/codename string cattleprod

# We never want to use a mirror.
d-i apt-setup/use_mirror       boolean false
d-i apt-setup/contrib          boolean false
# We don't need upgrades and the like.
d-i apt-setup/services-select  string

# Never try to mount media.
d-i mountmedia/disable boolean true

d-i clock-setup/ntp boolean false
d-i clock-setup/utc boolean true
d-i time/zone string US/Eastern

d-i netcfg/get_nameservers  string
d-i netcfg/get_hostname string unassigned-hostname
d-i netcfg/get_domain string unassigned-domain


# The d-i netcfg/hostname string hlm does not appear to work
d-i preseed/early_command string \
echo SUBSYSTEM==\"net\", ACTION==\"add\", DRIVERS==\"?*\", ATTR{address}==\"{{ iso_choose_interface_mac }}\", ATTR{dev_id}==\"0x0\", ATTR{type}==\"1\", KERNEL==\"eth*\", NAME=\"{{iso_choose_interface}}\" \
> /etc/udev/rules.d/60-manual-net.rules; \
hostname hlm; \
echo hlm > /etc/hostname;



# defaults to auto-selecting the first live NIC
{% if iso_choose_interface is defined %}
# To pick a particular interface instead:
d-i netcfg/choose_interface select {{ iso_choose_interface }}
{% else %}
# netcfg will choose an interface that has link if possible. This makes it
# skip displaying a list if there is more than one interface.
d-i netcfg/choose_interface select auto
{% endif %}

# May need to modify this for static assignment
# Static network configuration.
#
# IPv4 example
{% if iso_static_network is defined and iso_static_network %}
d-i netcfg/disable_autoconfig boolean true
d-i netcfg/get_ipaddress string {{ iso_ipaddress }}
d-i netcfg/get_netmask string {{ iso_netmask }}
d-i netcfg/get_gateway string {{ iso_gateway }}
d-i netcfg/get_nameservers string {{ iso_nameserver }}
d-i netcfg/confirm_static boolean true
{% else %}
d-i netcfg/get_ipaddress    string
d-i netcfg/get_netmask      string 255.255.255.0
d-i netcfg/get_gateway      string
d-i netcfg/dhcp_timeout     string 240
d-i netcfg/confirm_static   boolean true
{% endif %}
d-i netcfg/hostname string hlm

